<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.giorgio.provamenu.Profile_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nome"
        android:id="@+id/prftvname"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cognome"
        android:id="@+id/prftvsurname"
        android:layout_below="@+id/prftvname"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mobile"
        android:id="@+id/prftvmobile"
        android:layout_below="@+id/prftvsurname"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type_id"
        android:id="@+id/prftvtipo"
        android:layout_below="@+id/prftvmobile"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/prfivprofileimage"
        android:src="@drawable/ic_user"
        android:layout_marginBottom="53dp"
        android:layout_above="@+id/prftvname"
        android:layout_centerHorizontal="true"
        android:layout_margin="75dp"
        android:contentDescription="@string/immagine_profilo_utente" />
    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/ic_edit"
        android:background="@color/colorPrimary"
        app:fabSize="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/prfivprofileimage"
        android:layout_toRightOf="@+id/prftvname"
        android:layout_toEndOf="@+id/prftvname"
        android:id="@+id/prffabedit" />

</RelativeLayout>
